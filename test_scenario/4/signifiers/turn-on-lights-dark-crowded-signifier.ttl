@prefix cashmere: <https://aimas.cs.pub.ro/ont/cashmere#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .

<#turn-on-lights-dark-crowded-signifier> a cashmere:Signifier ;
    cashmere:signifies <http://example.org/affordances/lighting-system-on-group> ;
    cashmere:hasIntentionDescription [
        a cashmere:IntentionDescription ;
        cashmere:hasStructuredDescription """
{
    "intent": "turn on lights in a dark crowded room"
}
"""^^xsd:string ;
    ] ;
    cashmere:recommendsContext [
        a cashmere:IntentContext ;
        cashmere:hasStructuredDescription """
{
    "conditions": [
        {
            "artifact": "http://example.org/artifacts/internal_light_sensor",
            "propertyAffordance": "http://example.org/LightSensor#hasLuminosityLevel",
            "valueConditions": [
                {
                    "operator": "lessThan",
                    "value": 100
                }
            ]
        },
        {
            "artifact": "http://example.org/artifacts/person_counter",
            "propertyAffordance": "http://example.org/PersonCounter#hasPersonCount",
            "valueConditions": [
                {
                    "operator": "greaterEqual",
                    "value": 3
                }
            ]
        }
    ]
}
"""^^xsd:string ;
        cashmere:hasShaclCondition [
            a sh:NodeShape ;
            sh:targetNode <http://example.org/artifacts/internal_light_sensor> ;
            sh:property [
                sh:path <http://example.org/LightSensor#hasLuminosityLevel> ;
                sh:datatype xsd:integer ;
                sh:maxExclusive 100 ;
            ] ;
        ] ;
        cashmere:hasShaclCondition [
            a sh:NodeShape ;
            sh:targetNode <http://example.org/artifacts/person_counter> ;
            sh:property [
                sh:path <http://example.org/PersonCounter#hasPersonCount> ;
                sh:datatype xsd:integer ;
                sh:minInclusive 3 ;
            ] ;
        ] ;
    ] .
