@prefix hmas: <https://aimas.cs.pub.ro/ont/cashmere#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

<file:///C:/Users/Vlad/signifiers/#heat-room-signifier> a hmas:Signifier ;
    hmas:hasIntentionDescription [ a hmas:IntentionDescription ;
            hmas:hasStructuredDescription """{
            	"intent": "increase temperature in room"
        	}"""^^xsd:string ] ;
    hmas:recommendsAbility [ a hmas:LLMReasoningAbility ] ;
    hmas:recommendsContext [ a hmas:IntentContext ;
            hmas:hasShaclCondition [ a sh:NodeShape ;
                    sh:property [ sh:datatype xsd:integer ;
                            sh:maxInclusive 19 ;
                            sh:path <http://example.org/TemperatureSensor#hasTemperatureLevel> ] ;
                    sh:targetClass <http://example.org/TemperatureSensor> ;
                    sh:targetNode <http://example.org/precis/workspaces/lab308/artifacts/temperature_sensor308> ],
                [ a sh:NodeShape ;
                    sh:property [ sh:datatype xsd:integer ;
                            sh:minInclusive 1 ;
                            sh:path <http://example.org/PersonCounter#hasPersonCount> ] ;
                    sh:targetClass <http://example.org/PersonCounter> ;
                    sh:targetNode <http://example.org/precis/workspaces/lab308/artifacts/person_counter308> ] ;
            hmas:hasStructuredDescription """{
            	"conditions": [
                	{
                    	"artifact": "http://example.org/precis/workspaces/lab308/artifacts/temperature_sensor308",
                    	"propertyAffordance": "http://example.org/TemperatureSensor#hasTemperatureLevel",
                    	"valueConditions": [
                        	{
                            	"operator": "lessThan",
                            	"value": 20
                        	}
                    	]
                	},
                	{
                    	"artifact": "http://example.org/precis/workspaces/lab308/artifacts/person_counter308",
                    	"propertyAffordance": "http://example.org/PersonCounter#hasPersonCount",
                    	"valueConditions": [
                        	{
                            	"operator": "greaterEqual",
                            	"value": 1
                        	}
                    	]
                	}
            	]
        	}"""^^xsd:string ] ;
    hmas:signifies <file:///C:/Users/Vlad/signifiers/#heating-control-affordance> .

